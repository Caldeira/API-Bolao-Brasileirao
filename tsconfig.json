{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2019",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "typeRoots": ["./src/@types", "./node_modules/@types"],
    "incremental": true,
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", "tests", "dist", "**/*spec.ts", "./exemples/**/*"]
}
